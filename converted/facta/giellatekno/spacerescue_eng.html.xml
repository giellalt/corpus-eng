    <p xml:lang="ron"><em type="italic">de </em></p>
    <p xml:lang="sme">dajašin. Son lea viššaleabbo</p>
    <p xml:lang="sme"><em type="italic">go </em></p>
    <p xml:lang="smn">mun.</p>
    <p xml:lang="vep"><em type="italic">PART </em></p>
