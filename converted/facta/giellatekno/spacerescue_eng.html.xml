    <p xml:lang="sme"><em type="italic">leat </em></p>
    <p xml:lang="sme">čeahpit.</p>
    <p xml:lang="est"><em type="italic">Ale mana! </em></p>
    <p xml:lang="sme">Don</p>
    <p xml:lang="sme"><em type="italic">galggat </em></p>
